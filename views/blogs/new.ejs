<%- include('../partials/header') %>
    <%- include('../partials/navbar') %>

        <div class="container w-75 mt-5 p-1">
            <h3 style="font-family: 'Times New Roman', Times, serif;" class="mt-3 mb-3 m-auto">New Post</h3>
            <form action="/blogs" method="POST" class="needs-validation" novalidate>
                <div class="mb-3 ">
                    <label for="exampleInputtext" class="form-label">Name:</label>
                    <input type="text" name="writer" class="form-control" id="exampleInputText"
                        aria-describedby="textHelp" placeholder="Enter Your Name" required>
                    <div class="invalid-feedback">
                        Invalid Name
                    </div>
                </div>
                <div class="mb-3 ">
                    <label for="exampleInputtext" class="form-label">Title:</label>
                    <input type="text" name="title" class="form-control" id="exampleInputText"
                        aria-describedby="textHelp" placeholder="Enter Title of the Blog" required>
                    <div class="invalid-feedback">
                        Invalid Title
                    </div>
                </div>
                <div class="mb-3 ">
                    <label for="exampleInputBody" class="form-label">Content:</label>
                    <br>
                    <textarea name="bodycontent" class="form-control" id="" cols="124" rows="3" required></textarea>
                    <div class="invalid-feedback">
                        Invalid Content
                    </div>

                </div>

                <button type="submit" class="btn btn-success mb-4">Post</button>
            </form>

        </div>

        <%- include('../partials/footer') %>
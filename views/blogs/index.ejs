<%- include("../partials/header")%>
    <%- include('../partials/navbar') %>

        <!-- cards -->

        <div class="container mt-3 p-5">
            <div class="row">
                <!-- Iterate over "blogs" array passed in from backend. For each blog in the array, it will generate a new card with the blog data -->
                <%for(let b of blogs){%>
                    <div class="col-lg-6">
                        <div class="card mb-3 mw-100 p-2 shadow-sm p-3 mb-5 bg-body rounded">
                            <div class="row g-0">
                                <div class="col-md-8">
                                    <div class="card-body ms-2">
                                        <h5 class="card-title">
                                            <%= b.title %>
                                        </h5>
                                        <p class="card-text">
                                            <!-- Display first 90 words of character on card -->
                                            <%= b.bodycontent.substring(0,90)%>...
                                        </p>
                                        <p class="card-text"><small class="text-muted">Written By - <%= b.writer %>
                                            </small></p>
                                        <a href="/blogs/<%= b._id %> " class="btn btn-secondary mb-1">Read
                                            More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%}%>
            </div>




        </div>


        <%- include('../partials/footer') %>